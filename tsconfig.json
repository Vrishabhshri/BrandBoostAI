{
  "compilerOptions": {
    "jsx": "preserve", // Use 'react-jsx' for React 17+ JSX support
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "app/dashboard/layout.jsx",
    "app/dashboard/page.tsx",
    "configs/schema.js",
    "configs/db.ts",
    "app/api/webhooks/route.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
